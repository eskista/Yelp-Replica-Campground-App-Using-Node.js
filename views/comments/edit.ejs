<%- include("../partials/header") %>
<div class="container">
	<div class="container">
		<h1 style="text-align: center">Edit Comment</h1>
			<div style="width: 30%; margin:30px auto">
<!-- campground_id and comment_id are defined (under edit route for comment routes) in the object  -->
				<form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
					<div class="form-group">
<!-- Under value here, we are providing the existing comment (comment.text) that will be edited/updated -->
						<input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
					</div>
					<div class="form-group">
						<button class="btn btn-lg btn-primary btn-block">Submit!</button>
					</div>
				</form>
				<a href="/campgrounds">Go Back</a>
			</div>
	</div>
</div>
<%- include("../partials/footer") %>